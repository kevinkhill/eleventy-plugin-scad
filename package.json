{
  "name": "eleventy-plugin-scad",
  "version": "0.1.0",
  "description": "Eleventy plugin to treat SCAD files as templates that need rendering to STL and showcased",
  "keywords": [
    "eleventy",
    "eleventy-plugin",
    "openscad",
    "scad"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kevinkhill/eleventy-plugin-scad"
  },
  "license": "UNLICENSED",
  "author": {
    "name": "Kevin Hill",
    "email": "kevinkhill@gmail.com"
  },
  "type": "module",
  "exports": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist",
    "_layouts",
    "_includes"
  ],
  "scripts": {
    "build": "tsdown",
    "clean": "rm -rvf ./dist/*",
    "clean-test": "rm -rvf ./test/_11ty/output/*",
    "dev": "npm run start",
    "release": "bumpp && npm publish",
    "serve-test": "cd ./test/_11ty && DEBUG=eleventy:scad* eleventy --serve",
    "start": "tsdown --watch ./src",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "debug": "4.4.3",
    "find-up": "8.0.0",
    "he": "1.2.0",
    "yoctocolors": "2.1.2",
    "zod": "4.1.11"
  },
  "devDependencies": {
    "11ty.ts": "0.0.6",
    "@11ty/eleventy": "^3.1.2",
    "@biomejs/biome": "2.2.5",
    "rollup-plugin-copy": "3.5.0",
    "@rollup/plugin-replace": "6.0.2",
    "@types/debug": "^4.1.12",
    "@types/he": "^1.2.3",
    "@types/node": "^24.7.1",
    "bumpp": "10.3.1",
    "rimraf": "6.0.1",
    "tsdown": "0.11.13",
    "tsx": "4.20.6",
    "typescript": "^5.9.3",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "@11ty/eleventy": "^3"
  }
}
