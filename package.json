{
  "name": "11ty-plugin-openscad",
  "version": "0.1.0",
  "description": "Eleventy plugin to treat SCAD files as templates that need rendering to STL and showcased",
  "keywords": [
    "eleventy",
    "11ty",
    "openscad"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/khill-fbmc/11ty-plugin-openscad"
  },
  "license": "UNLICENSED",
  "author": {
    "name": "Kevin Hill",
    "email": "kevin.hill@fortunabmc.com"
  },
  "type": "module",
  "exports": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.js"
  },
  "files": [
    "dist",
    "_layouts",
    "_includes"
  ],
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsdown",
    "clean": "rm -rf dist",
    "dev": "tsdown --watch ./src",
    "release": "bumpp && npm publish",
    "test": "vitest",
    "serve-test": "cd test/_11ty && eleventy --serve",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "11ty.ts": "0.0.6",
    "@11ty/eleventy-utils": "^2.0.7",
    "find-up": "8.0.0",
    "rollup-plugin-copy": "^3.5.0",
    "yoctocolors": "2.1.2",
    "zod": "4.1.11"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@biomejs/biome": "2.2.5",
    "@types/node": "^24.7.1",
    "bumpp": "^10.3.1",
    "rimraf": "6.0.1",
    "tsdown": "^0.11.13",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@11ty/eleventy": "^3"
  }
}
