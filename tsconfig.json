{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "lib": [
      "ES2024"
    ],
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "module": "esnext",
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    // "isolatedDeclarations": true,
    "skipLibCheck": true,
  },
  "files": [
    "demo.ts",
    "../eleventy-dts/src/index.d.ts"
  ],
  "include": [
    "src",
    "types",
  ],
  "exclude": [
    "node_modules"
  ]
}
